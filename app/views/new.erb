<div class="wrapper">

<h1>Make a new robot!</h1>

  <form action="/robots" method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" name='robot[name]' class="form-control" placeholder="Enter name">
    </div>

    <div class="form-group">
      <label>City</label>
      <input type="text" name='robot[city]' class="form-control" placeholder="Enter city">
    </div>


    <div class="form-group">
      <label>State</label>
      <input type="text" name='robot[state]' class="form-control" placeholder="Enter state">
    </div>

    <div class="form-group">
      <label>Department</label>
      <input type="text" name='robot[department]' class="form-control" placeholder="Enter department">
    </div>

  <input type="submit" class="btn btn-primary">

  </form>

</div>